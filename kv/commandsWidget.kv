<SlotWidget>:
    size_hint: (None, None)
    width: 170
    height: 160
    canvas.before:
        Color:
            rgba: root.bg_color  # Білий колір з прозорістю 20%
        Rectangle:
            size: self.size
            pos: self.pos
    
    
    Label:                      #Status bar
        text: root.label_text
        size_hint: None, None
        font_size: 12
        markup: True
        width: self.parent.width
        pos: (self.parent.pos[0]+5, self.parent.pos[1]+35)  # Відносно self.discOp
        halign: 'center'
        valign: 'middle'
        text_size: self.width, None

    Label:                      #Short status label
        text: root.slotStatusLabel
        size_hint: None, None
        font_size: 28
        markup: True
        width: self.parent.width
        pos: (self.parent.pos[0]+5, self.parent.pos[1]+75)  # Відносно self.discOp
        text_size: self.width, None
        halign: 'center'
        valign: 'middle'    

    Label:                      #Pass/Fail result counter bar
        text: root.slotStatusCounter
        size_hint: None, None
        font_size: 16
        markup: True
        width: self.parent.width
        pos: (self.parent.pos[0]+10, self.parent.pos[1]-15)  # Відносно self.discOp
        halign: 'left'
        valign: 'middle'
        text_size: self.width, None
    
    ProgressBar:
        size_hint: None, None
        width: self.parent.width - 30
        #height: 150
        pos: (self.parent.pos[0]+15, self.parent.pos[1]+20)  # Відносно self.discOp
        max: 100
        value: root.progresBarVal   
    

    Label:                      #Slot name
        text: root.slotName
        size_hint: None, None
        font_size: 55
        font_name: 'fonts/hemi_head_bd_it.ttf'
        markup: True
        width: self.parent.width
        pos: (self.parent.pos[0]+120, self.parent.pos[1]-20)  # Відносно self.discOp
        text_size: self.width, None

