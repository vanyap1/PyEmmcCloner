<DiscOperation>:
    size_hint: (None, None)
    width: 500
    height: 100
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.2  # Білий колір з прозорістю 20%
        Rectangle:
            size: self.size
            pos: self.pos
    
    Button:
        id: startBtn
        text: root.btnText
        size: 70, 70
        size_hint: None, None
        font_size: 24
        #background_normal: 'images/disk.png'
        #background_down: 'images/diskgs.png'
        pos: (self.parent.pos[0]+15, self.parent.pos[1]+15)
        on_press: root.runProc()
    
    Label:                      #Status bar
        text: root.label_text
        size_hint: None, None
        font_size: 14
        markup: True
        width: self.parent.width-100
        pos: (self.parent.pos[0]+100, self.parent.pos[1]+25)  # Відносно self.discOp
        halign: 'left'
        valign: 'middle'
        text_size: self.width, None

    Label:                      #Pass/Fail result counter bar
        text: root.slotStatusCounter
        size_hint: None, None
        font_size: 16
        markup: True
        width: self.parent.width-100
        pos: (self.parent.pos[0]+100, self.parent.pos[1]-25)  # Відносно self.discOp
        halign: 'left'
        valign: 'middle'
        text_size: self.width, None
    
    ProgressBar:
        size_hint: None, None
        width: self.parent.width-120
        #height: 150
        pos: (self.parent.pos[0]+100, self.parent.pos[1])  # Відносно self.discOp
        max: 100
        value: root.progresBarVal   
    
    Label:                      #image name
        text: root.masterImage
        size_hint: None, None
        font_size: 12
        markup: True
        width: self.parent.width-100
        pos: (self.parent.pos[0]+380, self.parent.pos[1]-35)  # Відносно self.discOp
        halign: 'left'
        valign: 'middle'
        text_size: self.width, None

    Label:                      #Slot name
        text: root.slotName
        size_hint: None, None
        font_size: 24
        font_name: 'fonts/hemi_head_bd_it.ttf'
        markup: True
        width: self.parent.width-100
        pos: (self.parent.pos[0]+430, self.parent.pos[1]+30)  # Відносно self.discOp
        halign: 'left'
        valign: 'middle'
        text_size: self.width, None

