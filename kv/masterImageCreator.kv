<ImageCreator>:
    title: root.windowTitle
    size_hint: None, None
    size: 440, 250
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'
        Label:
            markup: True
            text: root.cliStatusLine
        BoxLayout:
            size_hint_y: None
            height: '40dp'
            Button:
                id: stopBtn
                text: 'Terminate/Exit'
                on_press: root.cancelationRequesr() #root.dismiss()
            Button:
                id: startBtn
                text: 'Start'
                on_press: root.call_function()