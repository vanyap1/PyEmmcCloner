<UpperStatusbar>:
    size_hint: (None, None)
    #width: 800-40
    #height: 80
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.2  # Білий колір з прозорістю 50%
        Rectangle:
            size: self.size
            pos: self.pos

    Image:
        source: root.logoImg  # Вкажіть шлях до вашого логотипу
        size_hint: None, None
        size: 80, 80
        pos: (self.parent.pos[0]+10, self.parent.pos[1])

    Label:                      
        text: root.devNameLine1
        size_hint: None, None
        font_size: 22
        font_name: 'fonts/hemi_head_bd_it.ttf'
        width: 300
        markup: True
        #width: self.parent.width
        #height: self.parent.height
        pos: (self.parent.pos[0]+100, self.parent.pos[1]+10)
        halign: 'left'
        valign: 'middle'
        text_size: self.size

    Label:                      
        text: root.devNameLine2
        size_hint: None, None
        font_size: 18
        font_name: 'fonts/hemi_head_bd_it.ttf'
        width: 300
        markup: True
        #width: self.parent.width
        #height: self.parent.height
        pos: (self.parent.pos[0]+100, self.parent.pos[1]-20)
        halign: 'center'
        valign: 'middle'
        text_size: self.size    
    



    Label:                                          #Master image label info
        text: root.jigState
        size_hint: None, None
        font_size: 18
        font_name: 'fonts/hemi_head_bd_it.ttf'
        markup: True
        width: 100
        pos: (self.parent.pos[0] + 400, self.parent.pos[1]+10)
        halign: 'left'
        valign: 'middle'
        text_size: self.size 

    Label:                                          #Controll source label info
        text: root.ctrlType
        size_hint: None, None
        font_size: 18
        font_name: 'fonts/hemi_head_bd_it.ttf'
        markup: True
        width: 100
        pos: (self.parent.pos[0] + 400, self.parent.pos[1]-10)
        halign: 'left'
        valign: 'middle'
        text_size: self.size 

    Label:                                          #IP, Host info lable
        text: root.ipAddr
        size_hint: None, None
        font_size: 18
        font_name: 'fonts/hemi_head_bd_it.ttf'
        markup: True
        width: 180
        pos: (self.parent.pos[0] + 400, self.parent.pos[1]-30)
        halign: 'left'
        valign: 'middle'
        text_size: self.size 


    #   Passed, failed total label
    Label:                      
        text: root.runStatus
        size_hint: None, None
        font_size: 18
        font_name: 'fonts/hemi_head_bd_it.ttf'
        markup: True
        width: self.parent.width
        height: self.parent.height
        pos: (self.parent.pos[0] + 600, self.parent.pos[1])
        halign: 'left'
        valign: 'middle'
        text_size: self.size    
    
    
