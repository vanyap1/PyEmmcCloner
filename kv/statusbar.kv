<UpperStatusbar>:
    size_hint: (None, None)
    width: 1024-20
    height: 100
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.2  # Білий колір з прозорістю 50%
        Rectangle:
            size: self.size
            pos: self.pos

    Label:                      
        text: root.timeLbl
        size_hint: None, None
        font_size: 64
        font_name: 'fonts/hemi_head_bd_it.ttf'
        markup: True
        width: self.parent.width
        height: self.parent.height
        pos: self.parent.pos
        halign: 'left'
        valign: 'middle'
        text_size: self.size
    
    Label:                                          #Master image label info
        text: root.masterImage
        size_hint: None, None
        font_size: 22
        font_name: 'fonts/hemi_head_bd_it.ttf'
        markup: True
        width: self.parent.width
        height: self.parent.height
        pos: (self.parent.pos[0] + 300, self.parent.pos[1]+30)
        halign: 'left'
        valign: 'middle'
        text_size: self.size 

    Label:                                          #Controll source label info
        text: root.ctrlType
        size_hint: None, None
        font_size: 22
        font_name: 'fonts/hemi_head_bd_it.ttf'
        markup: True
        width: self.parent.width
        height: self.parent.height
        pos: (self.parent.pos[0] + 300, self.parent.pos[1])
        halign: 'left'
        valign: 'middle'
        text_size: self.size 

    Label:                                          #IP, Host info lable
        text: root.ipAddr
        size_hint: None, None
        font_size: 22
        font_name: 'fonts/hemi_head_bd_it.ttf'
        markup: True
        width: self.parent.width
        height: self.parent.height
        pos: (self.parent.pos[0] + 300, self.parent.pos[1]-30)
        halign: 'left'
        valign: 'middle'
        text_size: self.size 



    Label:                      
        text: root.runStatus
        size_hint: None, None
        font_size: 22
        font_name: 'fonts/hemi_head_bd_it.ttf'
        markup: True
        width: self.parent.width
        height: self.parent.height
        pos: (self.parent.pos[0] + 840, self.parent.pos[1])
        halign: 'left'
        valign: 'middle'
        text_size: self.size    
    
    
    Button:
        text: "NewImg"
        size: 100, 40
        size_hint: None, None
        pos: (self.parent.pos[0]+700, self.parent.pos[1]+50)
        font_size: 24
        on_release: root.imageCreateWindow()
        